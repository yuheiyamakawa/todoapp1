<div class="container">
<h2>All Boards</h2>

<% @boards.each do |board| %>
  <div class="board">
    <div class="board_content">
      <div class="board_name">
        <%= board.name %>
      </div>
      <div class="board_description">
        <%= board.description %>
      </div>
    </div>

    <% if current_user && board.user.id == current_user.id %>
      <div class="dropbtn">
        <%= image_tag 'dropdown.png' %>
        <div class="dropdown-content">
          <%= link_to 'Edit', edit_board_path(board) %>
          <%= link_to "Delete", board_path(board), method: :delete %>
        </div>
      </div>
    <% end %>

  </div>
<% end %>

<p class="addnewboard" ><%= link_to "+ Add new board", new_board_path %><p>
</div>